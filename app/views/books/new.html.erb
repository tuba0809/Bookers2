<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: @book, local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :shop_name %>
  <h4>opinion</h4>
  <%= f.text_area :caption %>
  <%= f.submit '投稿' %>
<% end %>